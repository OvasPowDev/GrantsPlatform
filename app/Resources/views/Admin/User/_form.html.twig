{% trans_default_domain 'AppBundle' %}
{{ form_start(form, { 'attr': { 'autocomplete': 'new-password' } }) }}

<div class="row">
    <div class="col-lg-6">
        {{ form_row(form.first_name) }}
    </div>
    <div class="col-lg-6">
        {{ form_row(form.last_name) }}
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        {{ form_row(form.username, { 'attr': { 'autocomplete': 'new-password' } }) }}
    </div>
    <div class="col-lg-6">
        {{ form_row(form.passcode, { 'attr': { 'autocomplete': 'new-password' } }) }}
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        {{ form_row(form.email) }}
    </div>
    <div class="col-lg-6">
        {% if is_granted(constant('ROLE_SUPER_ADMIN', app.user)) %}
            {{ form_row(form.company) }}
        {% endif %}
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        {{ form_row(form.roles) }}
    </div>
    <div class="col-lg-6">
        {{ form_row(form.enabled) }}
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        {{ form_row(form.photo) }}
    </div>
</div>

{% if user.id %}
    <div class="form-group ">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <img height="100px" class="animated tada" src="{{ user.picture }}" alt="{{ user }}"/>
        </div>
    </div>
{% endif %}

<div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
        <a class="btn btn-white" href="{{ path('administrator_user_list') }}">{{ 'app.cancel' | trans }}</a>
        <button class="ladda-button btn btn-primary" type="submit" data-style="zoom-in">{{ 'app.save'|trans }}</button>
    </div>
</div>
{{ form_end(form) }}