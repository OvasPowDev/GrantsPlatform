{% extends 'base.html.twig' %}
{% trans_default_domain 'AppBundle' %}
{% import ":Components/Inspinia/UI:macros.html.twig" as UI %}

{% block title %}{{ 'app.administrato.plan.list' | trans }}{% endblock %}

{% block breadcrumb %}
    <li class="active">
        <strong>{{ 'app.administrato.plan.list' | trans }}</strong>
    </li>
{% endblock %}

{% block buttons %}
    <a href="{{ path('administrator_plan_new') }}"
       class="btn btn-primary ladda-button" data-style="expand-right">{{ 'app.administrator.plan.new' | trans }}</a>
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>{{ 'app.administrator.plan.list' | trans }}</h5>
            <div class="ibox-tools"></div>
        </div>
        <div class="ibox-content">

            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover dataTables-example">
                    <thead>
                    <tr>
                        <th>{{ 'app.name' | trans }}</th>
                        <th>{{ 'app.quantity_user' | trans }}</th>
                        <th>{{ 'app.quantity_grant' | trans }}</th>
                        <th>{{ 'app.created_at' | trans }}</th>
                        <th>{{ 'app.active' | trans }}</th>
                        <th>{{ 'app.actions' | trans }}</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for plan in plans %}
                        <tr class="gradeX">

                            <td>{{ plan.name }}</td>
                            <td>{{ plan.quantityGrant }}</td>
                            <td>{{ plan.quantityUser }}</td>
                            <td>{{ plan.createdAt | date('d-m-Y') }}</td>
                            <td class="text-center">
                                <a href="{{ path('plan_change_active',  { 'id':plan.id }) }}">
                                    <i class="fa fa-2x fa-{{ plan.active ? 'check-circle-o' : 'ban' }}"></i>
                                </a>
                            </td>
                            <td align="center">
                                {{ UI.editButton(path('administrator_plan_edit', { 'id': plan.id })) }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                    <tr>
                        <th>{{ 'app.name' | trans }}</th>
                        <th>{{ 'app.quantity_grant' | trans }}</th>
                        <th>{{ 'app.quantity_user' | trans }}</th>
                        <th>{{ 'app.created_at' | trans }}</th>
                        <th>{{ 'app.active' | trans }}</th>
                        <th>{{ 'app.actions' | trans }}</th>
                    </tr>
                    </tfoot>
                </table>
            </div>

        </div>
    </div>

{% endblock %}